{{> header}}

<h2>{{viewTitle}}</h2>

<table class="table table-dark table-striped">
    <thead>
        <th>Store ID</th>
        <th>Manager Staff ID</th>
        <th>Address ID</th>
        <th>Actions</th>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.storeId}}</td>
            <td>{{this.managerStaffId}}</td>
            <td>{{this.addressId.addressId}} - {{this.addressId.address}}</td>
            <td>
                <a href="/store/{{this._id}}" class="btn btn-info">Update</a>
                <a href="/store/delete/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('Do you want to delete this record?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
                